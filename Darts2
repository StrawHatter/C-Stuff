#include <iostream>
#include <string>
#include <cstdlib>
#include <ctime>
#include <time.h>
#include <stdio.h>      /* printf, scanf, puts, NULL */
#include <stdlib.h>     /* srand, rand */

using namespace std;

void main()
{
	srand(time(NULL));

	Player player_joe;
	Player player_sid;

	player_joe.name = "Joe";
	player_sid.name = "Sid";

	player_joe.hit_miss = (rand() % 100 < 71);
	player_sid.hit_miss = (rand() % 100 < 73);

	player_joe.no_bulls = 0;
	player_sid.no_bulls = 0;

	player_joe.no_throws = 0;
	player_sid.no_throws = 0;

	player_joe.avg_bulls = 0;
	player_sid.avg_bulls = 0;

	player_joe.avg_throws = 0;
	player_sid.avg_throws = 0;

}

class Player
{
	public:
		//attributes
		string name;
		int hit_miss, no_bulls, no_throws, avg_throws, avg_bulls;
}

